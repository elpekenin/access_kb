+        spi_transmit(p, bytes_this_loop);
+        writePinHigh(comms_config->spi_config.chip_select_pin);
+        p += bytes_this_loop;
+        bytes_remaining -= bytes_this_loop;
+    }
+
+    return byte_count - bytes_remaining;
